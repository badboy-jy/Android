<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        style="@style/top_nav">

        <ImageView
            android:id="@+id/gs_return"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:src="@drawable/fanhui" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="发布植作帮手信息"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/gs_planthelper_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部信息"
            android:textSize="14dp"
            android:textColor="#404040"
            android:padding="8dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:background="#ffffff"
        android:orientation="vertical">
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#07a6e6"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginRight="10dp"
                android:src="@drawable/name"
                android:layout_width="50dp"
                android:layout_height="match_parent" />
            <EditText
                android:id="@+id/gs_name"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:hint="用户名"
                android:textColor="@android:color/darker_gray"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="14sp"
                android:background="@null"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginRight="10dp"
                android:src="@drawable/fuwubangshou"
                android:layout_width="50dp"
                android:layout_height="match_parent" />
            <EditText
                android:id="@+id/gs_renshu"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:hint="人数"
                android:inputType="number"
                android:textColor="@android:color/darker_gray"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="14sp"
                android:background="@null"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginRight="10dp"
                android:src="@drawable/shijian"
                android:layout_width="50dp"
                android:layout_height="match_parent" />
            <EditText
                android:id="@+id/gs_time"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:hint="可做工时"
                android:textColor="@android:color/darker_gray"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="14sp"
                android:background="@null"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginRight="10dp"
                android:src="@drawable/jiage"
                android:layout_width="50dp"
                android:layout_height="match_parent" />
            <EditText
                android:id="@+id/gs_price"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:hint="价格"
                android:textColor="@android:color/darker_gray"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="14sp"
                android:background="@null"/>
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#d9d9d9"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginRight="10dp"
                android:src="@drawable/shoujihao"
                android:layout_width="50dp"
                android:layout_height="match_parent" />
            <EditText
                android:id="@+id/gs_phone"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:hint="电话"
                android:inputType="number"
                android:textColor="@android:color/darker_gray"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="14sp"
                android:background="@null"/>
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#d9d9d9"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginRight="10dp"
                android:src="@drawable/weixin"
                android:layout_width="50dp"
                android:layout_height="match_parent" />
            <EditText
                android:id="@+id/gs_weixin"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:hint="微信"
                android:inputType="number"
                android:textColor="@android:color/darker_gray"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="14sp"
                android:background="@null"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/gs_planthelper_fabu"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:background="@android:color/holo_blue_bright"
        android:layout_marginTop="20dp"
        android:text="发布"
        android:textColor="@android:color/white"
        android:textSize="15sp"/>
    <TextView
        android:id = "@+id/gs_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
