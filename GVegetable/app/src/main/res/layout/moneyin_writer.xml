<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        style="@style/top_nav">

        <ImageView
            android:id="@+id/gs_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/one" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="预收益详情"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/gs_money_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="收益详情"
            android:textColor="#404040"
            android:textSize="14dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:background="#ffffff"
        android:orientation="vertical">
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#07a6e6"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:text="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="8dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <EditText
                android:id="@+id/gs_moneyin_pinzhong1"
                android:layout_width="218dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:hint="品种"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/gs_price1"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:hint="价格"
                android:gravity="center"/>
            <EditText
                android:id="@+id/gs_shuliang1"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:hint="数量"
                android:gravity="center"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:text="2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="8dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <EditText
                android:id="@+id/gs_moneyin_pinzhong2"
                android:layout_width="218dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:hint="品种"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/gs_price2"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:hint="价格"
                android:gravity="center"/>

            <EditText
                android:id="@+id/gs_shuliang2"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:hint="数量" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:text="3"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="8dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <EditText
                android:id="@+id/gs_moneyin_pinzhong3"
                android:layout_width="218dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:hint="品种"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/gs_price3"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:hint="价格"
                android:gravity="center"/>
            <EditText
                android:id="@+id/gs_shuliang3"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:hint="数量"
                android:gravity="center"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:text="4"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="8dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <EditText
                android:id="@+id/gs_moneyin_pinzhong4"
                android:layout_width="218dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:hint="品种"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/gs_price4"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:hint="价格"
                android:gravity="center"/>
            <EditText
                android:id="@+id/gs_shuliang4"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:hint="数量"
                android:gravity="center"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:text="5"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="8dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <EditText
                android:id="@+id/gs_moneyin_pinzhong5"
                android:layout_width="218dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:hint="品种"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/gs_price5"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:hint="价格"
                android:gravity="center"/>
            <EditText
                android:id="@+id/gs_shuliang5"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:hint="数量"
                android:gravity="center"/>


        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/moneyin_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存" />
    <TextView
        android:id="@+id/to_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>